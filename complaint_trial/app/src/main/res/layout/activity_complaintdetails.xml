<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akramkhan.complaint_trial.complaintdetails">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDtitle"
            android:text="TITLE"/>
        <TextView
            android:textSize="20dp"
            android:text="count"
            android:id="@+id/cmpDcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:textSize="22dp"
        android:text="complaint status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cmpDstatus"/>

    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="20dp"
            android:text="complaint id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDid"
            android:layout_weight="1"/>
        <TextView
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="20dp"
            android:text="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDtime"/>
    </LinearLayout>
    <LinearLayout
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Authority concerned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:textSize="20dp"
            android:text="Techi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDtechi"/>
    </LinearLayout>
    <LinearLayout
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Comp Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="2"
            android:textSize="20dp"
            android:text="complaint type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDtype"/>
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="20dp"
            android:text="Hostel :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="right"
            android:textSize="20dp"
            android:text="Hostel name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDhostel"/>
    </LinearLayout>
    <TextView
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"/>
    <TextView
        android:textSize="20dp"
        android:text="\tThis is the \ndescription of the \ncomplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cmpDdesc"/>
    <ImageView
        android:id="@+id/cmpDimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="RESOLVED"
        android:id="@+id/resolved"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="upvote"
            android:id="@+id/upvote"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="downvote"
            android:id="@+id/downvote"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Working on it"
        android:id="@+id/redundant"
        android:layout_height="wrap_content" />
    <Button
        android:text="Notify"
        android:id="@+id/notify"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
